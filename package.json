{
  "name": "nobullshitcooking-api",
  "author": "T. J. Alferes",
  "description": "API for No Bullshit Cooking",
  "version": "1.0.0",
  "license": "ISC",
  "main": "src/index.js",
  "scripts": {
    "dev-seeds": "ts-node seeds/development/index.ts",
    "dev-server": "nodemon -e ts --exec 'ts-node src/index.ts' --verbose --legacy-watch",
    "unit-tests": "jest src/ --colors --detectOpenHandles",
    "integration-tests": "jest tests/integration/index.test.ts --verbose --colors --detectOpenHandles --logHeapUsage --runInBand --watchAll=false",
    "node-inspect": "node --inspect=0.0.0.0:9229 src/index.ts",
    "clean": "rimraf -g artifact/* build/* dist/*",
    "build-tsc": "tsc -p tsconfig.prod.json",
    "build-webpack": "webpack --config webpack.config.js",
    "create-artifact": "npm run clean && npm run build-tsc && 7z a artifact/nobsc-api.zip dist/ package.json package-lock.json",
    "prod-seeds": "ts-node seeds/production/index.ts",
    "start": "node dist/index.js"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.374.0",
    "@aws-sdk/client-ses": "^3.370.0",
    "@aws-sdk/s3-request-presigner": "^3.375.0",
    "@babel/runtime": "^7.22.6",
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/bcryptjs": "^2.4.6",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.31.1",
    "cors": "^2.8.5",
    "cron": "^2.4.3",
    "csrf-csrf": "^3.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "googleapis": "^122.0.0",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "mysql2": "^3.5.2",
    "pino-http": "^8.3.3",
    "socket.io": "^4.7.1",
    "superstruct": "^1.0.3",
    "uuidv7": "^0.6.3",
    "uws": "10.148.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "0.0.20",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.8",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^20.8.2",
    "@types/pino-http": "^5.8.1",
    "@types/supertest": "^2.0.16",
    "@types/uws": "^0.13.3",
    "aws-sdk-client-mock": "^3.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "jest": "^29.6.1",
    "node-mocks-http": "^1.12.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.3.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
